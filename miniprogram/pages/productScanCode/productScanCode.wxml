<view class="page">
  <view class="page_db_spacing">
    <view class="weui-cells__title">二维码</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell">
        <view class="weui-cell_bd">
          <textarea class="weui-textarea" placeholder="请输入二维码文本" style="height: 5em;background-color: antiquewhite; width: 100%;" value="{{codeText}}" bindinput="bindInput"></textarea>
        </view>
      </view>
    </view>
    <image src="{{tempFilePath}}" style="display: block;width: 200px;height: 200px;"></image>
    <view class="page__db_spaceing">
      <button class="weui-btn" bindtap="onGenerate" type="primary" style="width: 100%;">生成</button>
    </view>
  </view>
</view>