.container {
  width: 100%;
  position: relative;
}

page {
  width: 100%;
}

.canvas-area {
  width: 100%;
  height: 100%;
  background-color: #f8f8f8;
}

.myCanvas {
  width: 100%;
  height: 100%;
}

.canvas-tools {
  width: 100%;
  display: flex;
  justify-content: space-around;
  position: fixed;
  bottom: 10rpx;
  left: 0;
}

.box {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: rebeccapurple;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
}