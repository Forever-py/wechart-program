/* pages/zhiNanZhen/zhinanzhen.wxss */
page {
  width: 100%;
  height: 100%;
  background-color: #011b28;
}

.containers {
  height: 100%;
  font-family: 'microsoft yahei';
}

.text {
  color: white;
  font-size: 26rpx;
  text-align: center;
  padding-top: 10vh;
}

.text text {
  display: flex;
  flex-direction: column;
  height: 40rpx;
  line-break: 40rpx;
}

.img {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.img image {
  width: 320px;
  height: 320px;
}
.img .tip-btn {
  width: 80%;
  margin-top: 10vh;
}