/* pages/websocketDemo/websocketDemo.wxss */
page {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  background-color: gainsboro;
}

.page .content-area {
  width: 90%;
  height: 800rpx;
  background-color: white;
  margin: 10rpx auto;
  border-radius: 20rpx;
}

.send-message-area {
  display: flex;
  align-items: center;
}

.send-message {
  background-color: white;
  border: 2rpx solid gray;
  width: 400rpx;
  height: 100rpx;
  margin-left: 100rpx;
  margin-top: 10rpx;
}
.send-message-area .btn {
  padding: 0;
  width: 100rpx;
  height: 50rpx;
}