/* pages/file/file.wxss */
page {
  width: 100%;
  height: 100%;
}

.containers {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
  box-sizing: border-box;
  background: grey;
}

.page-section {
  width: 90%;
  padding: 10rpx;
  background-color: white;
  border-radius: 10rpx;
  margin: 10rpx 0;
  display: flex;
  justify-content: space-between;
}

.control-title {
  font-weight: bold;
  font-size: 5vw;
}

.page-section button {
  padding: 0 10rpx;
  width: auto;
  margin: 0;
}