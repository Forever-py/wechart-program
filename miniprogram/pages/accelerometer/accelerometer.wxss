/* pages/accelerometer/accelerometer.wxss */
page {
  background-color: greenyellow;
  height: 100%;
  width: 100%;
}

.panel_root {
  height: 100%;
  background-color: red;
}

.view_top {
  position: absolute;
  display: block;
  height: 40%;
  width: 100%;
  background-color: #2d3132;
  text-align: center;
}

.view_bottom {
  position: absolute;
  display: block;
  top: 40%;
  height: 60%;
  width: 100%;
  background-color: #2d3132;
  text-align: center;
}

.img_top {
  position: absolute;
  bottom: 0;
  width: 8rem;
  height: 7rem;
  margin-bottom: -3.5rem;
  margin-left: -4rem;
  clip: rect(0, 8rem, 3.5rem, 0);
}

.img_bottom {
  position: absolute;
  width: 8rem;
  height: 7rem;
  margin-top: -3.5rem;
  margin-left: -4rem;
  clip: rect(3.5rem, 8rem, 400rpx, 0);
}

.panel_bottom {
  width: 100%;
  height: 90%;
  position: absolute;
  top: 5rem;
  color: white;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.panel_result {
  background-color: white;
  color: black;
  margin: 1rem 2rem;
  padding: 1rem;
  width: 80%;
  text-align: center;
}

.panel_bottom .btn_test {
  position: absolute;
  padding: 10rpx 20rpx;
  bottom: 0;
  margin: 2rem;
  width: auto;
}



.img_loading {
  width: 1rem;
  height: 1rem;
}